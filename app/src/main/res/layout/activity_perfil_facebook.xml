<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/categoria_bk"
    tools:context=".Testes.PerfilFacebookActivity">

    <TextView
        android:text="FACEBOOK"
        android:textSize="26sp"
        android:textColor="@color/colorText"
        android:textStyle="bold"
        android:layout_centerHorizontal="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <LinearLayout
        android:orientation="vertical"
        android:layout_centerVertical="true"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/profile_pic"
            android:layout_gravity="center_horizontal"
            android:src="@drawable/ic_camera"
            android:layout_width="175dp"
            android:layout_height="175dp"
            app:civ_border_width="5dp"
            app:civ_border_color="@color/colorOrange"/>

        <TextView
            android:id="@+id/txtName"
            android:padding="20dp"
            android:text="rhouuerrje"
            android:textSize="16sp"
            android:textColor="@color/black"
            android:layout_gravity="center_horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/txtEmail"
            android:text="rhouuerrje@afgdh.com"
            android:layout_marginBottom="20dp"
            android:textSize="16sp"
            android:textColor="@color/black"
            android:layout_gravity="center_horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />



        <Button
            android:id="@+id/logoutBtn"
            android:text="logout"
            android:textColor="@color/white"
            android:background="@drawable/orange_btn_big_bk"
            android:layout_gravity="center_horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

    </LinearLayout>

</RelativeLayout>