<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/categoria_bk"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context=".activities.WalletActivity"
    tools:showIn="@layout/activity_wallet">

    <RelativeLayout
        android:id="@+id/cardView_hint"
        android:visibility="invisible"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <View
            android:layout_width="match_parent"
            android:layout_height="90dp"
            android:background="@drawable/toolbar_bk"/>



        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <de.hdodenhof.circleimageview.CircleImageView
                    android:id="@+id/img"
                    android:layout_marginTop="15dp"
                    android:layout_marginBottom="15dp"
                    android:src="@drawable/ic_camera"
                    android:layout_width="110dp"
                    android:layout_height="110dp"
                    android:layout_centerHorizontal="true"
                    android:contentDescription="@string/bega_logo"
                    app:civ_border_color="@color/colorButton"
                    app:civ_border_width="5dp"
                    android:elevation="1dp"
                    />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <android.support.v7.widget.CardView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="85dp"
                        app:cardElevation="10dp"
                        app:cardCornerRadius="5dp">

                        <android.support.constraint.ConstraintLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:paddingTop="40dp"
                            android:paddingBottom="20dp">



                            <TextView
                                android:id="@+id/txtNome"
                                app:layout_constraintTop_toTopOf="parent"
                                app:layout_constraintStart_toStartOf="parent"
                                app:layout_constraintEnd_toEndOf="parent"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="15dp"
                                android:layout_marginEnd="15dp"
                                android:layout_marginTop="15dp"
                                android:paddingTop="5dp"
                                android:textSize="18sp"
                                android:textStyle="bold"
                                android:text="@string/nome_completo"
                                />

                            <TextView
                                android:id="@+id/txtNomeCompleto"
                                app:layout_constraintTop_toBottomOf="@+id/txtNome"
                                app:layout_constraintStart_toStartOf="parent"
                                app:layout_constraintEnd_toEndOf="parent"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="15dp"
                                android:layout_marginEnd="15dp"
                                android:paddingTop="5dp"
                                android:textSize="16sp"
                                android:textStyle="bold"
                                android:textColor="@color/colorText"
                                android:text="Ryedy Yeye Yey"
                                />

                            <TextView
                                android:id="@+id/txtContactos"
                                app:layout_constraintTop_toBottomOf="@+id/txtNomeCompleto"
                                app:layout_constraintStart_toStartOf="parent"
                                app:layout_constraintEnd_toEndOf="parent"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="15dp"
                                android:layout_marginEnd="15dp"
                                android:layout_marginTop="10dp"
                                android:paddingTop="5dp"
                                android:textSize="18sp"
                                android:textStyle="bold"
                                android:text="Contactos"
                                />

                            <TextView
                                android:id="@+id/txtTelefone"
                                app:layout_constraintTop_toBottomOf="@+id/txtContactos"
                                app:layout_constraintStart_toStartOf="parent"
                                app:layout_constraintEnd_toEndOf="parent"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="15dp"
                                android:layout_marginEnd="15dp"
                                android:paddingTop="5dp"
                                android:textSize="16sp"
                                android:textStyle="bold"
                                android:textColor="@color/colorText"
                                android:text="7238892389"
                                />

                            <TextView
                                android:id="@+id/txtTelefoneAlternativo"
                                app:layout_constraintTop_toBottomOf="@+id/txtTelefone"
                                app:layout_constraintStart_toStartOf="parent"
                                app:layout_constraintEnd_toEndOf="parent"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="15dp"
                                android:layout_marginEnd="15dp"
                                android:paddingTop="5dp"
                                android:textSize="16sp"
                                android:textStyle="bold"
                                android:textColor="@color/colorText"
                                android:text="3235235232"
                                />

                            <TextView
                                android:id="@+id/txtUserMail"
                                app:layout_constraintTop_toBottomOf="@+id/txtTelefoneAlternativo"
                                app:layout_constraintStart_toStartOf="parent"
                                app:layout_constraintEnd_toEndOf="parent"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="15dp"
                                android:layout_marginEnd="15dp"
                                android:layout_marginTop="10dp"
                                android:paddingTop="5dp"
                                android:textSize="18sp"
                                android:textStyle="bold"
                                android:text="Email"
                                />

                            <TextView
                                android:id="@+id/txtEmail"
                                app:layout_constraintTop_toBottomOf="@+id/txtUserMail"
                                app:layout_constraintStart_toStartOf="parent"
                                app:layout_constraintEnd_toEndOf="parent"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="15dp"
                                android:layout_marginEnd="15dp"
                                android:paddingTop="5dp"
                                android:textSize="16sp"
                                android:textStyle="bold"
                                android:textColor="@color/colorText"
                                android:text="username@gmail.com"
                                />

                            <TextView
                                android:id="@+id/txtUserCountNumber"
                                app:layout_constraintTop_toBottomOf="@+id/txtEmail"
                                app:layout_constraintStart_toStartOf="parent"
                                app:layout_constraintEnd_toEndOf="parent"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="15dp"
                                android:layout_marginEnd="15dp"
                                android:layout_marginTop="10dp"
                                android:paddingTop="5dp"
                                android:textSize="18sp"
                                android:textStyle="bold"
                                android:text="Nº da Conta"
                                />

                            <TextView
                                android:id="@+id/txtContaNumber"
                                app:layout_constraintTop_toBottomOf="@+id/txtUserCountNumber"
                                app:layout_constraintStart_toStartOf="parent"
                                app:layout_constraintEnd_toEndOf="parent"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="15dp"
                                android:layout_marginEnd="15dp"
                                android:paddingTop="5dp"
                                android:textSize="16sp"
                                android:textStyle="bold"
                                android:textColor="@color/colorText"
                                android:text="1654615"
                                />

                            <TextView
                                android:id="@+id/txtUserCountCredit"
                                app:layout_constraintTop_toBottomOf="@+id/txtContaNumber"
                                app:layout_constraintStart_toStartOf="parent"
                                app:layout_constraintEnd_toEndOf="parent"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="15dp"
                                android:layout_marginEnd="15dp"
                                android:layout_marginTop="10dp"
                                android:paddingTop="5dp"
                                android:textSize="18sp"
                                android:textStyle="bold"
                                android:text="Crédito"
                                />

                            <TextView
                                android:id="@+id/txtSaldo"
                                app:layout_constraintTop_toBottomOf="@+id/txtUserCountCredit"
                                app:layout_constraintStart_toStartOf="parent"
                                app:layout_constraintEnd_toEndOf="parent"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="15dp"
                                android:layout_marginEnd="15dp"
                                android:paddingTop="5dp"
                                android:textSize="16sp"
                                android:textStyle="bold"
                                android:textColor="@color/colorText"
                                android:text="Saldo"
                                />


                        </android.support.constraint.ConstraintLayout>

                    </android.support.v7.widget.CardView>

                </LinearLayout>

            </RelativeLayout>

        </LinearLayout>

    </RelativeLayout>





    <include layout="@layout/activity_sem_conta_wallet"/>





</android.support.constraint.ConstraintLayout>