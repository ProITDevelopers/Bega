<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    app:cardElevation="10dp"
    app:cardCornerRadius="40dp">



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="10dp"
        android:gravity="center"
        android:id="@+id/linearLayoutopc_redif_senha"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:gravity="end|center_vertical">

            <ImageView
                android:id="@+id/btnCancelar_dialog"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="10dp"
                android:layout_marginRight="10dp"
                android:src="@drawable/ic_clear_black_24dp"/>
        </LinearLayout>

        <ImageView
            android:id="@+id/img"
            android:src="@drawable/barra_dialog_box"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:scaleType="centerCrop"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            />

        <TextView
            android:id="@+id/diagolo_titulo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/colorText"
            android:text="Tipo de Pagamento"
            android:layout_gravity="center"
            android:textAppearance="@style/TextAppearance.AppCompat.Medium"
            android:textSize="20sp"
            android:gravity="center"
            android:paddingTop="4dp"
            android:textStyle="bold"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"/>





        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="44dp"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="15dp"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:background="@android:color/transparent"
            android:gravity="center"
            android:weightSum="2"
            android:orientation="horizontal">

            <Button
                android:id="@+id/btnWallet"
                android:text="Carteira"

                android:background="@drawable/grey_btn_small_bk"
                android:drawableLeft="@drawable/ic_wallet_white_24dp"
                android:textSize="14sp"
                android:padding="4dp"
                android:drawableStart="@drawable/ic_wallet_white_24dp"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_marginRight="5dp"
                android:gravity="center"
                android:layout_gravity="center"
                android:textColor="@color/white"
                android:layout_height="44dp"
                android:layout_marginEnd="10dp"

                />

            <Button
                android:id="@+id/btnMulticaixa"
                android:text="Multicaixa"

                android:padding="5dp"
                android:background="@drawable/orange_btn_small_bk"
                android:drawableLeft="@drawable/ic_credit_card_white_24dp"
                android:textSize="14sp"
                android:layout_marginStart="5dp"
                android:layout_marginLeft="5dp"
                android:drawableStart="@drawable/ic_credit_card_white_24dp"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:gravity="center"
                android:layout_gravity="center"
                android:textColor="@color/white"
                android:layout_height="44dp"
                />

        </LinearLayout>

    </LinearLayout>

    <!--    <include layout="@layout/activity_sem_internet" />-->

</android.support.v7.widget.CardView>
